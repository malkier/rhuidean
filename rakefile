#

# Import required Ruby modules.
%w(rake/rdoctask rake/testtask rake/gempackagetask rake/packagetask).each do |m|
    require m
end

#
# Default task - unit tests.
#
# $ rake
#
task :default => [:test]

Rake::TestTask.new do |t|
    t.libs << 'test'
    t.test_files = %w(test/ts_rhuidean.rb test/ts_irc.rb)
end

#
# Documentation generation.
#
# $ rake rdoc
#
Rake::RDocTask.new do |r|
    r.rdoc_dir = 'doc/rdoc'
    r.options << '--line-numbers' << '--inline-source'
    r.rdoc_files.include('lib/irc.rb lib/irc/**/*')
end

#
# Package generation.
#
# $ rake package
#
PKG_FILES = FileList['rakefile', 'lib/irc.rb', 'lib/irc/**/*.rb', 'test/*.rb']

Rake::PackageTask.new('package') do |p|
    p.name          = 'rhuidean'
    p.version       = '1.0'
    p.need_tar      = false
    p.need_zip      = false
    p.package_files = PKG_FILES
end

spec = Gem::Specification.new do |s|
    s.name     = 'rhuidean'
    s.version  = '0.2' # Not really, but gems are stupid.
    s.author   = 'Eric Will'
    s.email    = 'rakaur@malkier.net'
    s.platform = Gem::Platform::RUBY
    s.summary  = 'a small, lightweight IRC client library'
    s.files    = PKG_FILES.to_a

    s.require_paths = %w(lib)
    s.test_file     = 'test/ts_irc.rb'
    s.has_rdoc      = true
end

Rake::GemPackageTask.new(spec) do
end
